{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "properties": [
        {
          "widget-type": "select",
          "label": "Format of the body",
          "name": "format",
          "widget-attributes": {
            "values": [
              "CSV",
              "TSV",
              "JSON",
              "PSV"
            ],
            "default": "CSV"
          }
        }
      ]
    },
    {
      "properties": [
        {
          "widget-type": "csv",
          "label": "Body Fields",
          "name": "body",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          }
        },
        {
          "widget-type": "csv",
          "label": "Header Fields",
          "name": "header",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "Field Name"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "string",
          "map<string,string>"
        ],
        "schema-default-type": "string"
      }
    }
  ]
}