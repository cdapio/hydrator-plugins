
{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Avro Snapshot Dataset",
  "configuration-groups": [
    {
      "label": "Snapshot Fileset - AVRO",
      "properties": [
        {
          "widget-type": "dataset-selector",
          "label": "Dataset Name",
          "name": "name"
        },
        {
          "widget-type": "textbox",
          "label": "Snapshot Base Path",
          "name": "basePath"
        },
        {
          "widget-type": "json-editor",
          "label": "FileSet Properties",
          "name": "fileProperties"
        },
        {
          "widget-type": "textbox",
          "label": "Clean Partitions Older Than",
          "name": "cleanPartitionsOlderThan"
        },
        {
          "widget-type": "select",
          "label": "Compression Codec",
          "name": "compressionCodec",
          "widget-attributes": {
            "values": [
              "None",
              "Snappy",
              "Deflate"
            ],
            "default": "None"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string",
          "map<string, string>"
        ],
        "schema-default-type": "string"
      }
    }
  ],
  "jump-config": {
    "datasets": [{
      "ref-property-name": "name"
    }]
  }
}
