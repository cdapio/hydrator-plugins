{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "FTP Batch Source Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "Path",
          "name": "path"
        },
        {
          "widget-type": "textbox",
          "label": "Regex Path Filter",
          "name": "fileRegex"
        },
        {
          "widget-type": "json-editor",
          "label": "File System Properties",
          "name": "fileSystemProperties"
        },
        {
          "widget-type": "select",
          "label": "Ignore Non-Existing Folders",
          "name": "ignoreNonExistingFolders",
          "widget-attributes": {
            "values": [
              "true",
              "false"
            ],
            "default": "false"
          }
        },
        {
          "widget-type": "select",
          "label": "Read files recursively",
          "name": "recursive",
          "widget-attributes": {
            "values": [
              "true",
              "false"
            ],
            "default": "false"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "widget-type": "non-editable-schema-editor",
      "schema": {
        "name": "etlSchemaBody",
        "type": "record",
        "fields": [
          {
            "name": "offset",
            "type": "long"
          },
          {
            "name": "body",
            "type": "string"
          }
        ]
      }
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
