  "filters": [
    {
      "name": "delimiter",
      "expression": "format == 'delimited'",
      "show": [
        {
          "name": "delimiter"
        }
      ]
    },
    {
      "name": "enableQuotedValues",
      "condition": {
        "expression": "format == 'delimited' || format == 'csv' || format == 'tsv'"
      },
      "show": [
        {
          "name": "enableQuotedValues"
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "default-schema": {
          "name": "fileRecord",
          "type": "record",
          "fields": [
            {
              "name": "offset",
              "type": "long"
            },
            {
              "name": "body",
              "type": "string"
            }
          ]
        }
      }
    }
  ],
  "jump-config": {
