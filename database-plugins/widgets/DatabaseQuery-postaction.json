{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textarea",
          "label": "Query",
          "name": "query",
          "widget-attributes": {
            "rows": "4"
          }
        },
        {
          "widget-type": "select",
          "label": "Run Condition",
          "name": "runCondition",
          "widget-attributes": {
            "values": [
              "completion",
              "success",
              "failure"
            ],
            "default": "success"
          }
        }
      ]
    },
    {
      "label": "JDBC Information",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Plugin Name",
          "name": "jdbcPluginName"
        },
        {
          "widget-type": "textbox",
          "label": "Plugin Type",
          "name": "jdbcPluginType"
        },
        {
          "widget-type": "textbox",
          "label": "Connection String",
          "name": "connectionString"
        },
        {
          "widget-type": "select",
          "label": "Enable Auto-Commit",
          "name": "enableAutoCommit",
          "widget-attributes": {
            "values": [
              "false",
              "true"
            ],
            "default": "false"
          }
        }
      ]
    }
  ]
}
